/* INSERE DADOS DE PARCELAS DE CONTRATOSS / ORÇAMENTOS
*/


DECLARE @CONTADOR int = 1

BEGIN
    WHILE @CONTADOR <= 12   
    BEGIN
		INSERT INTO [ENGEMAN].[ENGEMAN].[USER_MEDXCT]  
			([R_USER_CONTRO_U_PK_REDUZIDO],[U_VALOR],[U_HORAS], [U_SEQ], [U_SITUACAO], [U_SERVICO] )

		SELECT	  [U_PK_REDUZIDO]
				, [U_CTVLTOT]/[U_MESES] VALOR
				, [U_CTHSTOT]/[U_MESES] HORAS
				, @CONTADOR SEQ
				, 'P' SITUACAO
				, 'Pagamento de parcela refente à suporte do aplicativo SGM Mobile' SERVICO

		FROM [ENGEMAN].[ENGEMAN].[USER_CONTRO] 

		WHERE [U_PK_REDUZIDO] = 7
        
       SET @CONTADOR = @CONTADOR+ 1;

    END;
END;
